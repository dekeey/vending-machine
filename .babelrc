{
  "presets": [
    "es2015",
    "stage-0",
    "react"
  ],

  "plugins": [
    "transform-runtime"
  ],
  "env": {
    "development": {
      "presets": [
        "react-hmre"
      ],
      "plugins": [
        "react-hot-loader/babel"
      ]
    },
    "production": {
      "presets": [
        "react-optimize"
      ]
    },
    "test": {
      "plugins": [
        ["istanbul", {"exclude": ["**/*.spec.js"]}]
      ]
    }
  }
}
